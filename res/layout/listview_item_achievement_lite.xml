    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/textview_id_achievement_title"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/default_value_of_textview" />

    <TextView
        android:id="@+id/textview_id_achievement_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/default_value_of_textview" />
</LinearLayout>
